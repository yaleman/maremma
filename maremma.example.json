{
    "hosts": {
        "example.com": {
            "host_groups": [
                "check_ntp_time",
                "check_tls"
            ]
        }
    },
    "local_services": {
        "services": [
            "local_lslah"
        ]
    },
    "services": {
        "ping_check": {
            "service_type": "ping",
            "host_groups": ["check_ntp_time"],
            "cron_schedule": "* * * * *"
        },
        "local_lslah": {
            "service_type": "cli",
            "host_groups": ["local_lslah"],
            "command_line": "ls -lah /tmp",
            "cron_schedule": "* * * * *"
        },
        "check_ntp_time": {
            "service_type": "ssh",
            "host_groups": ["check_ntp_time"],
            "command_line": "/usr/lib/nagios/plugins/check_ntp_time -H localhost",
            "cron_schedule": "* * * * *"
        },
        "check_tls": {
            "service_type": "tls",
            "host_groups": ["check_tls"],
            "cron_schedule": "* * * * *",
            "port": 443
        }
    },
    "listen_address": "127.0.0.1",
    "listen_port": 8000,
    "cert_file": "/etc/letsencrypt/live/example.com/fullchain.pem",
    "cert_key": "/etc/letsencrypt/live/example.com/privkey.pem",
    "static_path": "./static"
}
